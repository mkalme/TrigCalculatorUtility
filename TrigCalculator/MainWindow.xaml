<Window x:Class="TrigCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrigCalculator"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontWeight="Bold"
        Title="Trigonometry Calculator" Height="450" Width="400">
    
    <Grid Margin="10, 5, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <Label Content="Sin" Padding="0" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="SinInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="SinOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>
        <Grid Margin="0, 3, 0, 0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <Label Content="Cos" Padding="0" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="CosInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="CosOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>
        <Grid Margin="0, 3, 0, 0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <Label Content="Tan" Padding="0" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="TanInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="TanOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>
        <Grid Margin="0, 4, 0, 0" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Foreground="Black" Grid.Row="0" Padding="0">
                <Run Text="Sin&#x207B;&#x00B9;" />
            </TextBlock>
            <TextBox x:Name="AsinInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="AsinOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>
        <Grid Margin="0, 4, 0, 0" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Foreground="Black" Grid.Row="0" Padding="0">
                <Run Text="Cos&#x207B;&#x00B9;" />
            </TextBlock>
            <TextBox x:Name="AcosInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="AcosOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>
        <Grid Margin="0, 4, 0, 0" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Foreground="Black" Grid.Row="0" Padding="0">
                <Run Text="Tan&#x207B;&#x00B9;" />
            </TextBlock>
            <TextBox x:Name="AtanInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="AtanOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>

        <Grid Margin="0, 3, 0, 0" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <Label Content="Degrees to radians" Padding="0" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="DegreesToRadiansInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="DegreesToRadiansOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>

        <Grid Margin="0, 3, 0, 0" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100px" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17px" />
                <RowDefinition Height="22px" />
            </Grid.RowDefinitions>

            <Label Content="Radians to degrees" Padding="0" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="RadiansToDegreesInputTextBox" Padding="1, 2, 0, 0" Height="22px" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="RadiansToDegreesnOutputTextBox" Padding="1, 2, 0, 0" Height="22px" IsReadOnly="True" Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="1" />
        </Grid>

        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Content="Calculate" HorizontalAlignment="Left" Width="120px" Height="25px" Grid.Column="0" Click="CalculateButton_Click" />
            <Button Content="Clear" HorizontalAlignment="Right" Width="70px" Height="25px" Grid.Column="1" Click="ClearButton_Click" />
        </Grid>
    </Grid>
</Window>
